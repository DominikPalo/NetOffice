<Project>
  <!-- Common properties for NetOffice projects -->
  <PropertyGroup>
    <NetOfficeRelease>1.8.0</NetOfficeRelease>
  </PropertyGroup>

  <PropertyGroup>
    <Product>NetOffice</Product>
    <Copyright>Copyright © 2012-2018 Sebastian Lange, Copyright © 2015-2019 Jozef Izso</Copyright>
    <Company>NetOfficeFw</Company>
  </PropertyGroup>

  <!-- Versioning and packaging for NetOffice projects -->
  <PropertyGroup>
    <VersionPrefix>$(NetOfficeRelease)</VersionPrefix>
    <VersionSuffix Condition=" '$(VersionSuffix)'=='' ">local</VersionSuffix>
    <AssemblyVersion>$(NetOfficeRelease).0</AssemblyVersion>
    <FileVersion>$(NetOfficeRelease).0</FileVersion>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net40;net45;net47;netcoreapp3.1</TargetFrameworks>
    <Configuration>Debug</Configuration>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <SignAssembly>true</SignAssembly>
    <AssemblySearchPaths>$(AssemblySearchPaths);{GAC}</AssemblySearchPaths>
  </PropertyGroup>
</Project>